{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "./",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "testPathIgnorePatterns": ["dist", "test/unit"],
  "collectCoverageFrom": ["src/**/*.ts", "!dist/**", "!src/index.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
